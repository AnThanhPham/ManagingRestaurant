<section class="reservation-section">
    <div class="container_body">
        <h1 class="title">Online Reservation</h1>
        <p class="subtitle">Book your table for lunch or dinner.</p>
        
        <form class="reservation-form">
            <div class="form-grid">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your name">
                    <span class="icon">👤</span>
                </div>
                
                <div class="form-group">
                    <input type="tel" class="form-control" placeholder="Phone number">
                    <span class="icon">📞</span>
                </div>
                
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email address">
                    <span class="icon">✉️</span>
                </div>

                <div class="form-group">
                    <select class="form-control">
                        <option value="1">1 Person</option>
                        <option value="2">2 People</option>
                        <option value="3">3 People</option>
                        <option value="4">4 People</option>
                        <option value="5">5+ People</option>
                    </select>
                    <span class="icon">👥</span>
                </div>

                <div class="form-group">
                    <input type="date" class="form-control">
                    <span class="icon">📅</span>
                </div>

                <div class="form-group">
                    <input type="time" class="form-control" value="19:00">
                    <span class="icon">⏰</span>
                </div>
            </div>
            <a asp-area="Payment" asp-controller="Home" asp-action="Index" class="btn reserve-btn" onclick="reserveTable(event)">Reserve Your Table Now</a>
        </form>
    </div>
</section>
